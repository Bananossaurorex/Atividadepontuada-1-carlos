programa
{
	
	funcao inicio()
	{
	real maca,morango,kilos,resultado1,resultado2,somatotal,desconto
	    //Resultado maçã
	escreva("Quantos kilos de maça?")
		leia (maca)
          se (maca<=5){
	resultado1=maca*1.80
	}
		senao
	resultado1=maca*1.50

		//Resultado morango
	escreva("\nQuantos kilos de morango?")
		leia (morango)
          se (morango<=5){
          resultado2=morango*2.50
          }
	     senao
	     resultado2=morango*2.20
	     //Definindo 
	     somatotal=resultado1+resultado2
	     desconto=somatotal-(somatotal*0.1)
	     //Possibilidade de desconto
	     se (morango+maca>=8 ou somatotal>=25)
	escreva (desconto)
	     senao
	     escreva (somatotal)
		}
	}

